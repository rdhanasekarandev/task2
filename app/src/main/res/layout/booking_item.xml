<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="test"
            type="com.thamizhi.task2.data.Test" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@{test.status? @drawable/green : @drawable/red}"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="10dp"
                    android:text="@{test.status? @string/completed : @string/canceled}"
                    android:textColor="@color/white"
                    android:textSize="11dp" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_action_time"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="3dp"
                        android:paddingTop="10dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="10dp"
                        android:text="2020-06-03 11:55"
                        android:textColor="@color/grey"
                        android:textSize="11dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/price"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="10dp"
                    android:text="$122.00"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/left"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/top"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_action_my_location"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/top"
                        android:layout_above="@id/bottom"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_action_down"/>

                    <ImageView
                        android:id="@+id/bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_action_location"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_toLeftOf="@id/right"
                    android:layout_toRightOf="@id/left"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="10dp"
                        android:text="799, TNHB, Mela anuppanadi, Madurai 625009"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="10dp"
                        android:text="799, TNHB, Mela anuppanadi, Madurai 625009"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/right"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_action_person"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="10dp"
                    android:id="@+id/cateImage"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_car"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cateImage"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="3dp"
                    android:paddingTop="10dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="10dp"
                    android:text="Luxury"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_action_time"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Cash"
                        android:textColor="@color/grey"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>